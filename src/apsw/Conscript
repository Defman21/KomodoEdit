my $consLocal = $cons;
my $landmark = "$komodoPythonUtilsDir/apsw/apsw.pyd";

if ($platform eq "win") {
    #my %consLocal = $cons->copy();
    #$consLocal{'CPPFLAGS'} = "-DSQLITE_ENABLE_FTS3 -DSQLITE_ENABLE_FTS3_PARENTHESIS";
    #$consLocal = new cons(ENV => \%consLocal);
}

$consLocal->Command(
    # The main output file
